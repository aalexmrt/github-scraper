# Database connection string
# Note: When using docker-compose.services.yml, this is set automatically
# Only needed if running backend directly (not in Docker)
DATABASE_URL=postgresql://user:password@localhost:5432/github_scraper

# Redis connection settings
# Note: When using docker-compose.services.yml, this is set automatically
# Only needed if running backend directly (not in Docker)
REDIS_HOST=localhost
REDIS_PORT=6379

# GitHub API Personal Access Token (OPTIONAL but recommended)
# Used for better API rate limits and user profile data
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=your_github_personal_access_token

# Storage Configuration
# Use false for local development (filesystem storage)
USE_R2_STORAGE=false

# R2 Storage Configuration (only needed if USE_R2_STORAGE=true)
# For production deployments using Cloudflare R2
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=github-repos

# GitHub OAuth Configuration
# Note: When using docker-compose.services.yml, these come from root .env
# Only needed if running backend directly (not in Docker)
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

# Session Configuration
# Note: When using docker-compose.services.yml, this comes from root .env
# Only needed if running backend directly (not in Docker)
SESSION_SECRET=your-random-session-secret-string-min-32-characters

# Application URLs
# Note: When using docker-compose.services.yml, these come from root .env
FRONTEND_URL=http://localhost:3001
BACKEND_URL=http://localhost:3000

# Demo Repository Population (OPTIONAL)
# Set to 'true' to automatically populate demo repositories on server startup
# The script is idempotent - it will skip repos that already exist and are completed
POPULATE_DEMO_REPOS=false
