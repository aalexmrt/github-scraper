# Database connection string
DATABASE_URL=postgresql://user:password@db:5432/github_scraper

# Redis connection settings
REDIS_HOST=redis
REDIS_PORT=6379

# GitHub API Personal Access Token
GITHUB_TOKEN=<your_github_personal_access_token>


# Use false for local development
USE_R2_STORAGE=false

# Prod storage
USE_R2_STORAGE=true
R2_ACCOUNT_ID=your_account_id
R2_ACCESS_KEY_ID=your_access_key
R2_SECRET_ACCESS_KEY=your_secret_key
R2_BUCKET_NAME=github-repos

GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret

SESSION_SECRET=your-random-session-secret-string-min-32-characters

# Demo Repositories
# Set to 'true' to automatically populate demo repositories on server startup
# The script is idempotent - it will skip repos that already exist and are completed
POPULATE_DEMO_REPOS=false
